# Local Environment Configuration
# Copy this file to application-local.properties and fill in your actual credentials

# Database Configuration
spring.datasource.url=jdbc:postgresql://localhost:5432/peoplesystem
spring.datasource.username=postgres
spring.datasource.password=YOUR_LOCAL_POSTGRES_PASSWORD

# Secondary Database (Philotes)
spring.people-datasource.url=jdbc:postgresql://your-aiven-host.aivencloud.com:PORT/defaultdb?sslmode=require
spring.people-datasource.username=avnadmin
spring.people-datasource.password=YOUR_AIVEN_PASSWORD

# Server Configuration
server.port=8080

# Logging
logging.level.root=INFO
logging.level.org.springframework=INFO
logging.level.tw.com.tymbackend=DEBUG

# Session Configuration
app.session.enabled=true
spring.session.store-type=redis
spring.session.redis.namespace=tymb:sessions

# Public URLs
PUBLIC_TYMB_URL=http://localhost:8080/tymb
PUBLIC_FRONTEND_URL=http://localhost:4321/tymultiverse/

# Keycloak Configuration
keycloak.auth-server-url=https://peoplesystem.tatdvsonorth.com/sso
keycloak.realm=PeopleSystem
keycloak.clientId=peoplesystem
keycloak.credentials.secret=YOUR_KEYCLOAK_SECRET

# Redis Configuration
REDIS_HOST=localhost
REDIS_CUSTOM_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_QUEUE_TYMB=qa_tymb_queue

# Session Settings
app.session.timeout=1800
app.session.cookie.name=JSESSIONID
app.session.cookie.path=/
app.session.cookie.http-only=true
app.session.cookie.secure=false

# gRPC Server Configuration
grpc.enabled=true
grpc.port=50051


